{
    "version": 3,
    "configurePresets": [
        {
            "name": "linuxConfig",
            "displayName": "Linux Configuration",
            "description": "Default build using Unix Makefiles",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "YES",
                "CMAKE_BUILD_TYPE": "Debug",
                "GCC_FLAGS": "-Wall -Wextra -Wshadow -Wnon-virtual-dtor -pedantic -Wshadow -Wnon-virtual-dtor -Wold-style-cast -Wcast-align -Wunused -Woverloaded-virtual -Wpedantic -Wconversion -Wsign-conversion -Wmisleading-indentation -Wduplicated-cond -Wduplicated-branches -Wlogical-op -Wnull-dereference -Wuseless-cast -Wdouble-promotion -Wformat=2 -Wduplicated-cond -Wduplicated-branches -Wlogical-op -Wnull-dereference -Wuseless-cast -Wdouble-promotion -Wformat=2 -Wno-unused-parameter -Wno-missing-field-initializers -Wno-unused-parameter -Wno-missing-field-initializers -Wno-implicit-fallthrough",
                "CMAKE_C_FLAGS": "${GCC_FLAGS}",
                "CMAKE_CXX_FLAGS": "${GCC_FLAGS} -std=c++17",
                "CMAKE_EXE_LINKER_FLAGS": "-Wl,--print-memory-usage -Wl,-Map=output.map"
            }
        }
    ]
}